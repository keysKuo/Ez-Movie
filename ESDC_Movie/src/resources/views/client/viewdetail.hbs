<section class="mt-5">
                   
            <div class="container">
                {{#if movie}}
                <div class="row">
                    <div class="col-md-3" id="film_tag">
                                <h5 class=" mt-2" style="height:40px">{{movie.name}}</h5>
                                <img src="{{movie.banner}}" alt="" style="width: 100%; height: 350px;">
                                <a href="/booking/{{movie.slug}}" class="btn">Now Book Ticket</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10" id="film_tag">
                                    <h5><b>Release Date : </b>{{formatDate movie.release}}</h5>
                                    
                                    <h5><b>Language     : </b>{{movie.lang}}</h5>
                                    
                                    <h5><b>Duration     : </b>{{movie.duration}}</h5>
                                    <h5><b>Description  : </b>{{movie.desc}}</h5>
                    </div>
                </div>
                </div>
                {{/if}}
                

            </div>
            </div>

        </section>